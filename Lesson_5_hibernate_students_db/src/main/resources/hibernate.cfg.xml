<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/students_db?serverTimezone=UTC&amp;useSSL=false&amp;allowPublicKeyRetrieval=true
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">my18Erasql20</property>

        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="ru.erasko.model.Student"/>
    </session-factory>
</hibernate-configuration>